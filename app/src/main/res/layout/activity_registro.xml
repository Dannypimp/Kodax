<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#eab5b5"
    tools:context="com.example.danny.kodax1.Registro">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:weightSum="1"
        android:layout_alignParentLeft="true">

        <EditText
            android:id="@+id/edit0"
            android:layout_width="348dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:gravity="center_vertical"
            android:hint="Nombre de la Clinica:"
            android:inputType="textPersonName"
            android:textAlignment="center"
            android:textColor="#f30a0000"
            android:textStyle="bold|italic"
            android:layout_weight="0.18" />


        <EditText
            android:id="@+id/edit1"
            android:hint="Doctor(a):"
            android:textColor="#f30a0000"
            android:textAlignment="center"
            android:textStyle="bold|italic"
            android:layout_width="348dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:gravity="center_vertical"
            android:inputType="textPersonName"
            android:layout_weight="0.17" />

        <EditText
            android:id="@+id/edit2"
            android:hint="Correo Electronico:"
            android:textStyle="bold|italic"
            android:textColor="#f30a0000"
            android:textAlignment="center"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:gravity="center_vertical"
            android:inputType="textPersonName"
            android:layout_weight="0.25" />



        <EditText
            android:id="@+id/edit3"
            android:hint= "Contraseña:"
            android:textColor="#f30a0000"
            android:textAlignment="center"
            android:textStyle="bold|italic"
            android:layout_width="352dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:layout_weight="0.10" />

        <TextView
            android:layout_width="321dp"
            android:layout_height="28dp"
            android:text="Especialidades:"
            android:layout_gravity="center"
            android:textColor="#434141"
            android:textSize="20dp"
            android:gravity="center"

            />


        <Spinner
            android:id="@+id/sp_especial"
            android:layout_width="211dp"
            android:layout_height="wrap_content" />


        <EditText
            android:id="@+id/edit5"
            android:hint= "Direccion Especifica:"
            android:textColor="#f30a0000"
            android:textAlignment="center"
            android:textStyle="bold|italic"
            android:layout_width="357dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:gravity="center_vertical"
            android:inputType="textPersonName"
            android:layout_weight="0.13" />


        <EditText
            android:id="@+id/edit6"
            android:hint= "Numero de Teléfono:"
            android:textColor="#f30a0000"
            android:textAlignment="center"
            android:textStyle="bold|italic"
            android:layout_width="363dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="number"
            android:layout_weight="0.10" />

        <Button
            android:id="@+id/boton"
            android:layout_width="157dp"
            android:layout_height="wrap_content"
            android:text="registrarse" />

    </LinearLayout>
</RelativeLayout>
