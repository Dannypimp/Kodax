<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingBottom="16dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="16dp"
    tools:context="com.example.danny.kodax1.Registro">

    <ScrollView
        android:id="@+id/login_form"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.design.widget.TextInputLayout
            android:id="@+id/email_login_form"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:weightSum="1"
            android:layout_alignParentLeft="true">

            <android.support.design.widget.TextInputLayout

                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >

                <AutoCompleteTextView
                    android:id="@+id/edit0"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:textColorHighlight="@color/cardview_dark_background"
                    android:ems="40"
                    android:drawableLeft="@drawable/clinica1"
                    android:hint="Nombre de la Clinica:"
                    android:inputType="textPersonName"
                    android:textColor="#f30a0000" />

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >
                <AutoCompleteTextView
                    android:id="@+id/edit1"
                    android:hint="Doctor(a):"
                    android:drawableLeft="@drawable/doctor1"
                    android:textColor="#f30a0000"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:textColorHighlight="@color/cardview_dark_background"

                    android:ems="10"

                    android:inputType="textPersonName" />

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout

                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >
                <AutoCompleteTextView
                    android:id="@+id/edit5"
                    android:hint= "Direccion:"
                    android:drawableLeft="@drawable/direccion1"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:textColorHighlight="@color/cardview_dark_background"
                    android:textColor="#f30a0000"
                    android:ems="10"
                    android:inputType="textPersonName" />

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout

                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >

                <AutoCompleteTextView
                    android:id="@+id/edit7"
                    android:hint= "Horario de Atencion:"
                    android:drawableLeft="@drawable/horario1"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:textColorHighlight="@color/cardview_dark_background"

                    android:ems="10"

                    android:inputType="textPersonName"
                    android:layout_weight="0.13" />

            </android.support.design.widget.TextInputLayout>


            <android.support.design.widget.TextInputLayout

                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >
                <AutoCompleteTextView
                    android:id="@+id/edit6"
                    android:hint= "Numero de TelÃ©fono:"
                    android:textColor="#f30a0000"

                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:maxLength="8"
                    android:drawableLeft="@drawable/telefono1"
                    android:textColorHighlight="@color/cardview_dark_background"
                    android:ems="10"
                    android:inputType="number"
                    android:layout_weight="0.10" />

            </android.support.design.widget.TextInputLayout>


            <android.support.v7.widget.CardView
                android:id="@+id/botonGuardar"
                style="?android:textAppearanceSmall"
                android:layout_width="150dp"
                android:layout_height="35dp"
                android:layout_gravity="center"
                android:onClick="Listo"
                android:text="@string/action_sign_in"
                android:textStyle="bold"
                app:cardBackgroundColor="#03000b"
                app:cardCornerRadius="15dp">

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="match_parent"
                    android:layout_height="72dp"
                    android:layout_centerInParent="true"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="Guardar"
                    android:textColor="#fdfcfc"
                    android:textSize="25dp" />



            </android.support.v7.widget.CardView>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
            </LinearLayout>
        </android.support.design.widget.TextInputLayout>
    </ScrollView>



</RelativeLayout>
